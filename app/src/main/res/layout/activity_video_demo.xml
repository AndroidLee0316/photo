<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bar_grey">

        <ImageView
            android:id="@+id/left_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:padding="15dp"
            android:src="@drawable/picture_back"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxEms="11"
            android:text="选择视频"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:overScrollMode="never" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/layout_number"
                android:visibility="gone"/>

            <RadioGroup
                android:id="@+id/rgb_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_default_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="默认样式"
                    android:textColor="@color/color_53"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_white_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="样式一"
                    android:textColor="@color/color_53"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_num_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="样式二"
                    android:textColor="@color/color_53"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_sina_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="样式三"
                    android:textColor="@color/color_53"
                    android:textSize="14sp" />

            </RadioGroup>

            <EditText
                android:id="@+id/et_video_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入最大拍摄时间(s)"
                android:text="10"
                android:textSize="14sp"
                android:inputType="number"
                />
            <CheckBox
                android:id="@+id/cb_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="是否开启点击声音"
                android:textColor="@color/color_53"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/rgb_photo_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="全部"
                    android:textColor="@color/color_53"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="图片"
                    android:textColor="@color/color_53"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="视频"
                    android:textColor="@color/color_53"
                    android:textSize="14sp" />

            </RadioGroup>


            <CheckBox
                android:visibility="visible"
                android:id="@+id/cb_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="相册or单独拍照"
                android:textColor="@color/color_53"
                android:textSize="14sp" />

            <CheckBox
                android:visibility="gone"
                android:id="@+id/cb_choose_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:gravity="center_vertical"
                android:text="单选or多选"
                android:textColor="@color/color_53"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb_isCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="显示or隐藏拍摄"
                android:textColor="@color/color_53"
                android:textSize="14sp" />



            <CheckBox
                android:visibility="gone"
                android:id="@+id/cb_preview_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="是否预览图片"
                android:textColor="@color/color_53"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb_preview_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="是否预览视频"
                android:textColor="@color/color_53"
                android:textSize="14sp" />


            <CheckBox
                android:id="@+id/cb_compress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="是否压缩视频"
                android:textColor="@color/color_53"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb_video_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:checked="true"
                android:text="拍摄高清视频"
                android:textColor="@color/color_53"
                android:textSize="14sp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
